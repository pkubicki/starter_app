.header-bar{"data-body-padding-increase" => "45"}
  .container-fluid
    .row-fluid
      .span12
        %h3.header-bar-header
          = t(:'.header') 

%dl
  %dt= User.human_attribute_name(:login)
  %dd= @user.login
  %dt= User.human_attribute_name(:email)
  %dd= @user.email

.form-actions
  = link_to_with_icon(t(:'shared.back'), 'icon-arrow-left', users_path, :class => 'btn')
  = link_to_with_icon(t(:'shared.edit'), 'icon-edit icon-white', edit_user_path(@user), :class => 'btn btn-primary') if policy(@user).edit?
  = link_to_with_icon(t(:'shared.destroy'), 'icon-trash icon-white', user_path(@user), :class => 'btn btn-danger', :method => :delete, :confirm => t(:'shared.destroy_confirmation')) if policy(@user).destroy?
